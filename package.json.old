  "main": "index.js",
  "scripts": {
    "test": "npm run clean && npx hardhat test",
    "c": "npx hardhat compile --force && npx hardhat size-contracts",
    "clean": "npx hardhat clean",
    "f": "npx truffle-flattener ./contracts/PBullToken.sol --output ./flattened.sol",
    "deploy_kovan": "npx hardhat deploy --network kovan --reset",
    "deploy_local": "npx hardhat deploy --network localhost  --reset",
    "deploy_rinkeby": "npx hardhat deploy --network rinkeby --reset",
    "deploy_ropsten": "npx hardhat deploy --network ropsten --reset",
    "deploy_bsc_testnet": "npx hardhat deploy --network bsc_testnet --reset",
    "deploy_bsc_mainnet": "npx hardhat deploy --network bsc_mainnet",
    "deploy_eth_mainnet": "npx hardhat deploy --network eth_mainnet",
    "lint:js": "npx eslint . --fix",
    "lint:sol": "npx solhint contracts/*.sol",
    "lint": "npm run prettier && npm run lint:js && npm run lint:sol",
    "prettier": "npx prettier --write 'contracts/**/*.sol'",
    "run_node": "npx hardhat node"
  },
